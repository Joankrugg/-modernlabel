<div class="index-cards">
  <%= link_to service do %>
    <div class="index-media-card">
      <%= cl_image_tag service.photo, height: 300, width: 400, crop: :fill, class: "image-card img-responsive" %>
      <div class="index-card-logo">
        <%= cl_image_tag("logo_9_aiamw0.png", :quality=>"jpegmini:1", :sign_url=>true) %>
      </div>
      <div class="index-title-card">
        <p class="band-name"><%= service.name %></p>
        <p class="overwrite">PRIX: <%= service.adhesion_fee %>Euros</p>
      </div>
      <div class="index-action-card">
      </div>
    </div>
  <% end %>
</div>
