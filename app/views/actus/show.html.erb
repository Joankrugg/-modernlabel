<% content_for(:title_tag) do %>
  -<%= @actu.title %>- on Modern Box Records
<% end %>
<% content_for(:description) do %>
  <%= @actu.description %>
<% end %>
<div class="page-title top">NEWS</div>
  <div class="container">
    <div class="row">
      <div class="col-lg-offset-1 col-lg-10 first-item">
        <%= cl_image_tag @actu.photo, height: 500, width: 1100, crop: :fill , class: "img-responsive"%>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-offset-2 col-lg-8">
        <div class="last-news-title">
          <h3><%= @actu.title.upcase %></h3>
          <h5><%= @actu.edition.strftime("%d/%m/%Y") %></h5>
        </div>
        <hr>
        <div class="last-news-description">
          <h5><%= @actu.description %></h5>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-offset-2 col-lg-8">
      <hr>
        <div class="last-news-description">
          <p><%= @actu.content %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="banner">
    <div class="banner-content">
      <div class="last-item">
      <hr>
        <div class="card-description">
          <%= link_to "#{@actu.link}", "#{@actu.link}" , target: "_blank" %>
          <%= social_share_button_tag(@actu.title, :allow_sites => %w(twitter facebook tumblr pinterest email linkedin)) %>
        </div>
      </div>
    </div>
  </div>
</div>
