<div class="index-media-card">
  <%= link_to performance do %>
    <%= cl_image_tag performance.photo, height: 300, width: 400, crop: :fill, class: "image-card img-responsive" %>
  <% end %>
  <div class="index-card-logo">
    <%= cl_image_tag("logo_9_aiamw0.png", :quality=>"jpegmini:1", :sign_url=>true) %>
  </div>
  <div class="index-title-card">
    <p class="asso-name">-<%= performance.name.capitalize %>-</p>
    <p><%= performance.city.capitalize %></p>
    <% if performance.place.present? %>
      <p><%= performance.place_address %></p>
    <% end %>
  </div>
  <div class="index-action-card">
  </div>
</div>
