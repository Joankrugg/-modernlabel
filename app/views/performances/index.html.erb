<div class="white"></div>
<div class="container">
  <div class="page-title-search">
    MUSIC MATCH CONCERTS
  </div>
  <%= render 'shared/performance_search' %>
</div>
<div class="banner">
  <div class="banner-content">
    <!--section d'ensemble-->
    <div class="container items">
      <div class="row">
        <% if @performances.present? %>
          <% @performances.each do |performance|%>
            <% unless performance.start_time.to_date.past? %>
              <div class="col-xs-6 col-sm-4 col-md-3 col-lg-3">
                <div class="main">
                  <div class="card">
                    <div class="info-card">
                      <%= link_to performance do %>
                        <%= cl_image_tag performance.photo, height: 250, width: 400, crop: :fill, class: "style_image img-responsive" %>
                      <% end %>
                      <div class="info" id="performance">
                        <% if performance.artist.present? %>
                          <h1><%= performance.artist.name %></h1>
                        <% end %>
                        <% if performance.asso.present? %>
                          <h1><%= performance.asso.name %></h1>
                        <% end %>
                        <% if performance.place.present? %>
                          <h1><%= performance.place.name %></h1>
                        <% end %>
                        <h1><%= performance.city %></h1>
                        <h1><%= performance.start_time.strftime("%d/%m/%Y Ã  %H:%M") %></h1>
                        <h1><%= performance.place_address %></h1>
                        <%= render 'shared/icons' %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        <% else %>
          <%= render 'shared/no_result' %>
        <% end %>
      </div>
    </div>
  </div>
</div>



<div class="container calendar">
  <%= month_calendar events: @performances do |date, performances| %>
    <%= date.day %>
      <% performances.each do |performance| %>
        <div>
          <% if performance.artist.present? %>
            <%= performance.artist.name %>
          <% end %>
          <% if performance.asso.present? %>
            <%= performance.asso.name %>
          <% end %>
          <% if performance.place.present? %>
            <%= performance.place.name %>
          <% end %>
        </div>
      <% end %>
  <% end %>
</div>
