<div class="container group">
  <%= simple_form_for (@performance), defaults: { label_html: { class: 'labels' } } do |f| %>
    <% if @performance.errors.any? %>
      <div id="error_explanation">
        <ul>
        <% @performance.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.association :artist, required: false %>
    <%= f.input :name %>
    <%= f.input :city %>
    <%= f.input :place_address %>
    <%= f.input :price %>
    <%= f.input :facebook_event %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>

    <%= f.submit %>
  <% end %>
</div>
