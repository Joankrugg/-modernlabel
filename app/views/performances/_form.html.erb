<%= simple_form_for @performance, defaults: { label_html: { class: 'labels' } } do |f| %>
  <% if @performance.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @performance.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-1 col-lg-10 form">
    <%= f.input :name, required: false, placeholder: t(".placeholder_1", default: "Obligatoire") %>
    <%= f.input :city, required: false, placeholder: t(".placeholder_1", default: "Obligatoire") %>
    <%= f.input :start_time %>
    <%= f.input :place_address, required: false, placeholder: t(".placeholder_1", default: "Obligatoire") %>
    <%= f.input :price, required: false %>
    <%= f.input :facebook_event, required: false, placeholder: t(".placeholder_1", default: "Obligatoire") %>
    <%= f.association :type, required: false %>
    <%= f.input :photo, required: false %>
    <%= f.button :submit, class: "btn btn-medium last-item" %>
  </div>

<% end %>

