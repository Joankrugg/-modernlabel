<div class="index-wallpapers">
  <div class="search">
    <%= render 'shared/topic_search' %>
  </div>
  <div class="index-page">
    <div class="container">
      <div class="row">
        <% if @topics.present? %>
          <% @topics.each do |a|%>
            <div class="col-xs-6 col-sm-4 col-md-4 col-lg-3">
              <div class="main">
                <div class="index-cards">
                  <%= render "topic", topic: a %><br>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="row">
            <%= render 'shared/no_result' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

