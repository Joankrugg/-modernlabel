<%= render 'shared/place_search' %>
<div class="banner">
  <div class="banner-content">
    <!--section d'ensemble-->
    <div class="container items">
      <div class="row">
        <% if @places.present? %>
          <% @places.each do |a|%>
            <div class="col-xs-6 col-sm-4 col-md-3 col-lg-3">
              <div class="main">
                <div class="card">
                  <%= render "place", place: a %><br>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="no-result" style="color: black">
            sorry! but no result were found!
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
