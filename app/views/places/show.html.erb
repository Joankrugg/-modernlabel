<% content_for(:title_tag) do %>
  -<%= @place.name %>-
<% end %>
<%= render 'shared/place_search' %>
<div class="container card-model">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-1 col-sm-7 col-md-offset-1 col-md-7 col-lg-offset-1 col-lg-7">
      <h1 class= "hidden-lg hidden-md hidden-sm title-top" style= "text-align: center;">-<%= @place.name.upcase %>-</h1>
      <div class="info-card">
        <%= cl_image_tag @place.photo, height: 600, width: 700, crop: :fill, class: "img-responsive"%>
        <div class="info-card-details">
          <h3>-<%= @place.name.upcase %>-</h3>
          <h5><%= t(".city")%>: <%= @place.city %></h5>
          <h5><%= t(".genre")%>: <%= @place.genre.name %> </h5>
          <% if @place.user == current_user %>
            <%= link_to t(".Delete", default: "delete this"), place_path(@place), class: "call-to-action btn-medium btn ", method: :delete, data: { confirm: "Are you sure?" } %>
          <% end %>
        </div>
      </div>
    </div>
    <div class=" col-lg-3 col-md-3 col-sm-3 col-xs-12">
      <div class="info-card productions hidden-xs hidden-sm hidden-md" id="header">
        <%= cl_image_tag @place.photo, height: 80, width: 100, crop: :fill, class: "img-responsive"%>
      </div>
      <div class="info-card productions" id= "bio">
        <h4>INFOS:</h4>
        <% if @place.address.present? %>
          <p><%= @place.address %></p>
        <% else %>
          <p>Add the address of your place </p>
        <% end %>
      </div>
      <div class="info-card productions">
        <%= image_tag 'logo_9.png', height: 20, width: 110, crop: :fit, class: "img-responsive" %>
      </div>
    </div>
  </div>
    <div class="row">
    <% if @place.hardwares.present? %>
      <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-1 col-md-10 col-lg-offset-1 col-lg-10 model-items">
        <h2>//MATÉRIEL Á DISPOSITION\\</h2>
        <hr>
      </div>
      <% @place.hardwares.each do |hardware| %>
        <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-1 col-md-10 col-lg-offset-1 col-lg-10 model-items">
          <%= link_to hardware do %>
            <div class="info-card productions">
              <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                <%= cl_image_tag hardware.photo, height: 100, width: 100, crop: :fill, class: 'img-rounded img-responsive' %>
              </div>
              <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
                <div class="col-lg-4">
                  <p style="color: black; text-align: left; font-weight: bold"><%= t(".NAME") %>: -<%= hardware.name %>-</p>
                  <p style="color: black; text-align: left"><%=t(".NUMBER")%>: -<%= hardware.number %>-</p>
                </div>
                <div class="col-lg-8">
                  <p style="color: black; text-align: left"><%= t(".DESCRIPTION") %>: -<%= hardware.description %>-</p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="row">
    <% if @place.performances.present? %>
    <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-1 col-md-10 col-lg-offset-1 col-lg-10 model-items">
      <h2>//CONCERTS\\</h2>
      <hr>
    </div>
      <% @place.performances.each do |performance| %>
        <%= link_to performance do %>
          <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-1 col-lg-10 model-items">
            <div class="info-card productions">
              <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                <%= cl_image_tag performance.photo, height: 100, width: 100, crop: :fill, class: "img-rounded img-responsive" %>
              </div>
              <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
                <div class="col-lg-4">
                  <p style="color: black; text-align: left; font-weight: bold"><%=t(".TITLE") %>: -<%= performance.name %>-</p>
                  <p style="color: black; text-align: left"><%=t(".CITY") %>: -<%= performance.city %>-</p>
                  <p style="color: black; text-align: left"><%=t(".ADDRESS") %>: -<%= performance.place_address %>-</p>
                </div>
                <div class="col-lg-4">
                  <p style="color: black; text-align: left"><%=t(".DATE") %>: -<%= performance.start_time.strftime("%d,%m,%Y à %H:%M") %>-</p>
                  <p style="color: black; text-align: left"><%=t(".PRICE") %>: -<%= performance.price %>Euros-</p>
                </div>
                <div class="col-lg-4">
                  <% if performance.facebook_event? %>
                    <%= link_to performance.facebook_event, target: :_blank do %>
                      <i class="fa fa-facebook"></i>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="row">
    <% if @place.videos.present? %>
    <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-1 col-md-10 col-lg-offset-1 col-lg-10 model-items">
      <h2>//VIDEOS\\</h2>
      <hr>
    </div>
      <% @place.videos.each do |video| %>
        <div class="col-xs-12 col-sm-offset-1 col-sm-5 col-md-offset-1 col-md-5 col-lg-offset-1 col-lg-5 model-items">
          <div class="video">
            <iframe src='https://www.youtube.com/embed/<%= video.youtube_link[32..80] %>?rel=0&autoplay=<%= params[:autoplay] || 0 %>' height='600' width='760' class='img-responsive' frameborder='0' allowfullscreen></iframe>
          </div>
        </div>
        <%= link_to video do %>
          <div class="col-xs-12 col-sm-5 col-md-5 col-lg-5">
            <div class= "lead">
              <div class="productions">
                <h1>-<%= video.title  %>-</h1>
                <h1>-<%= @place.name  %>-</h1>
                <%= render 'shared/icons' %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <%= render'tabs' %>
</div>

