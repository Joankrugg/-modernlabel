            <p class="user-profil">Créer salle</p>
            <p class="user-profil">Faites vous connaître</p>
            <p class="user-profil">Placez votre salle rock friendly sur la Rock_Map</p>
          </div>
        </div>
      <% end %>

      <% if current_user.asso != nil %>
        <%= link_to @user.asso do %>
          <div class="col-lg-3">
            <div class="user-card">
              <%= cl_image_tag @user.asso.photo, height: 300, width: 300, crop: :fill, class: "img-responsive" %>
              <p class="user-profil"><%= @user.asso.name.capitalize %></p>
              <p class="user-profil"><%= @user.asso.city %></p>
              <p class="user-profil"><%= @user.asso.activity.name %></p>
            </div>
          </div>
        <% end %>
      <% end %>

      <% if current_user.place != nil %>
        <%= link_to @user.place do %>
          <div class="col-lg-3">
            <div class="user-card">
              <%= cl_image_tag @user.place.photo, height: 300, width: 300, crop: :fill, class: "img-responsive" %>
              <p class="user-profil"><%= @user.place.name.capitalize %></p>
              <p class="user-profil"><%= @user.place.city %></p>
              <p class="user-profil"><%= @user.place.genre.name %></p>
            </div>
          </div>
        <% end %>
      <% end %>

