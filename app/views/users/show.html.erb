<div class="index-wallpapers">
  <div class="container">
    <h1 class="page-title-search" style="color: white; padding-top: 24px;">
      MODERN BOX MEMBERS
    </h1>
    <div class="row">
      <div class="col-lg-12">
        <div class="notification-space">
          <%= link_to pluralize(Notification.unread_count(current_user), "Notifications"), notifications_path, class: "btn btn-medium-white notif"%>
        </div>
        <% if @topics.present? %>
          <% current_user.topics.each do |t| %>
            <%= link_to @topic do %>
              <p style="text-align: center; margin-top: 15px;"><%= t.title %></p>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="registration-content">
        <% if current_user.asso == nil && current_user.place == nil && current_user.artist == nil && current_user == @user %>
          <p class="user-log-step">2ème Etape</p>
          <p class="user-log-step">Choisir une action</p>
        <% end %>
      </div>
    </div>

    <div class="row">
      <% if current_user.artist == nil %>
        <div class="col-xs-6 col-sm-4 col-md-4 col-lg-3">
          <div class="user-card" data-toggle="modal" data-target="#new_artist">
            <%= cl_image_tag ("oeyoruj52wwpszcmdwqy.jpg"), height: 300, width: 300, crop: :fill, class: " img-responsive" %>
            <p class="user-profil">Nouvel Artiste</p>
            <p class="user-profil">Faites connaître votre musique</p>
            <p class="user-profil">Placez vous sur la Rock_Map</p>
          </div>
        </div>
      <% else %>
        <%= link_to @user.artist do %>
          <div class="col-xs-6 col-sm-4 col-md-4 col-lg-3">
            <div class="user-card">
              <%= cl_image_tag @user.artist.photo, height: 300, width: 300, crop: :fill, class: " img-responsive" %>
              <p class="user-profil">
                <%= @user.artist.name.capitalize %>
              </p>
              <p class="user-profil"><%= @user.artist.city %></p>
              <% if @user.artist.bookable? %>
                <p class="user-profil">Disponible pour booking</p>
              <% else %>
                <p class="user-profil">Bientôt disponible</p>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>

      <% if current_user.asso == nil && current_user.place == nil %>
        <div class="col-xs-6 col-sm-4 col-md-4 col-lg-3">
          <div class="user-card" data-toggle="modal" data-target="#new_asso">
            <%= cl_image_tag ("oeyoruj52wwpszcmdwqy.jpg"), height: 300, width: 300, crop: :fill, class: " img-responsive" %>
            <p class="user-profil">Créer une structure</p>
            <p class="user-profil">Faites connaître votre activité</p>
            <p class="user-profil">Placez vous sur la Rock_Map</p>
          </div>
        </div>
        <div class="col-xs-6 col-sm-4 col-md-4 col-lg-3">
          <div class="user-card" data-toggle="modal" data-target="#new_place">
            <%= cl_image_tag ("oeyoruj52wwpszcmdwqy.jpg"), height: 300, width: 300, crop: :fill, class: "img-responsive" %>
            <p class="user-profil">Créer salle</p>
            <p class="user-profil">Faites vous connaître</p>
            <p class="user-profil">Placez votre salle rock friendly sur la Rock_Map</p>
          </div>
        </div>
      <% end %>

      <% if current_user.asso != nil %>
        <%= link_to @user.asso do %>
          <div class="col-xs-6 col-sm-4 col-md-4 col-lg-3">
            <div class="user-card">
              <%= cl_image_tag @user.asso.photo, height: 300, width: 300, crop: :fill, class: "img-responsive" %>
              <p class="user-profil"><%= @user.asso.name.capitalize %></p>
              <p class="user-profil"><%= @user.asso.city %></p>
              <p class="user-profil"><%= @user.asso.activity.name %></p>
            </div>
          </div>
        <% end %>
      <% end %>

      <% if current_user.place != nil %>
        <%= link_to @user.place do %>
          <div class="col-xs-6 col-sm-4 col-md-4 col-lg-3">
            <div class="user-card">
              <%= cl_image_tag @user.place.photo, height: 300, width: 300, crop: :fill, class: "img-responsive" %>
              <p class="user-profil"><%= @user.place.name.capitalize %></p>
              <p class="user-profil"><%= @user.place.city %></p>
              <p class="user-profil"><%= @user.place.genre.name %></p>
            </div>
          </div>
        <% end %>
      <% end %>

      <div class="col-xs-6 col-sm-4 col-md-4 col-lg-3">
        <div class="user-card" data-toggle="modal" data-target="#new_topic">
          <%= cl_image_tag ("oeyoruj52wwpszcmdwqy.jpg"), height: 300, width: 300, crop: :fill, class: "img-responsive" %>
          <p class="user-profil">Nouveau Sujet</p>
          <p class="user-profil">Elargissez vos interêts</p>
          <p class="user-profil">Echangez vos compétences</p>
        </div>
      </div>

      <div class="col-xs-6 col-sm-4 col-md-4 col-lg-3">
        <div class="user-card" data-toggle="modal" data-target="#update-profil">
          <%= cl_image_tag ("oeyoruj52wwpszcmdwqy.jpg"), height: 300, width: 300, crop: :fill, class: "img-responsive" %>
          <p class="user-profil">Ajouter préférences</p>
          <p class="user-profil">Elargissez vos interêts</p>
          <p class="user-profil">Précisez vos matchs</p>
        </div>
      </div>

      <div class="col-xs-6 col-sm-4 col-md-4 col-lg-3">
        <div class="user-card" data-toggle="modal" data-target="#instruments">
          <%= cl_image_tag ("oeyoruj52wwpszcmdwqy.jpg"), height: 300, width: 300, crop: :fill, class: "img-responsive" %>
          <p class="user-profil">Ajouter instruments</p>
          <p class="user-profil">Rendez vous disponible ou non</p>
          <p class="user-profil">En recherche de groupes ou non</p>
        </div>
      </div>

      <% if @user == current_user %>
        <div class="col-xs-6 col-sm-4 col-md-4 col-lg-3">
          <div class="user-card">
            <%= link_to user_path(@user), method: :delete, data: { confirm: "Are you sure?" } do %>
              <%= cl_image_tag ("oeyoruj52wwpszcmdwqy.jpg"), height: 300, width: 300, crop: :fill, class: " img-responsive" %>
              <p class="user-profil destroy"><%= t(".delete", default: "delete my account") %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <%= render 'modals' %>

    <div class="quality">
      <p class= "profil-title">Revendiquer un compte artiste, salle ou asso existant?</p>
        <%= social_share_button_tag("revendication de compte", :allow_sites => %w(email), :rel => "modernboxrecords", :url => "https://modernboxrecords.com/users/#{@user.id}" )%>
      <p class="profil-details">modernboxrecords@gmail.com</p>
    </div>
    <%= render 'matches' %>
    </div>
  </div>
</div>




