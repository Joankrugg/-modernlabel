<div class="index-wallpapers">
  <div class="container">
    <div class="page-title top" style="color: white; text-align: center;">MON COMPTE</div>
    <div class="row">
      <div class="col-lg-12">
        <div class="notification-space">
          <%= link_to pluralize(Notification.unread_count(current_user), "Notifications"), notifications_path, class: "btn btn-medium"%>
        </div>
        <% if @topics.present? %>
          <% current_user.topics.each do |t| %>
            <%= link_to @topic do %>
              <p style="text-align: center; margin-top: 15px;"><%= t.title %></p>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="registration-content">
        <% if current_user.asso == nil && current_user.place == nil && current_user.artist == nil && current_user == @user %>
          <p class="user-log-step">2ème Etape</p>
          <p class="user-log-step">Choisir une action</p>
        <% else %>
          <p class="user-log-step">Tableau de bord</p>
        <% end %>

        <% if current_user.artist == nil %>
          <div class="user-card">
            <div class="row line">
              <div class="id-card" data-toggle="modal" data-target="#new_artist">
                <div class="col-lg-2">
                  <%= cl_image_tag ("oeyoruj52wwpszcmdwqy.jpg"), height: 125, width: 125, crop: :fill, class: " img-responsive" %>
                </div>
                <div class="col-lg-4">
                  <p class="user-profil">
                    Nouvel Artiste
                  </p>
                </div>
              </div>
            </div>
          </div>
        <% else %>
          <div class="user-card">
            <div class="row line">
              <%= link_to @user.artist do %>
                <div class="col-lg-2">
                  <%= cl_image_tag @user.artist.photo, height: 125, width: 125, crop: :fill, class: " img-responsive" %>
                </div>
                <div class="col-lg-4">
                  <p class="user-profil">
                    <%="#{@user.artist.name.capitalize}" %>
                  </p>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <% if current_user.asso == nil && current_user.place == nil %>
          <div class="user-card">
            <div class="row line">
              <div class="id-card" data-toggle="modal" data-target="#new_asso">
                <div class="col-lg-2">
                  <%= cl_image_tag ("oeyoruj52wwpszcmdwqy.jpg"), height: 125, width: 125, crop: :fill, class: " img-responsive" %>
                </div>
                <div class="col-lg-4">
                  <p class="user-profil">Créer asso</p>
                </div>
              </div>
            </div>
          </div>
          <div class="user-card">
            <div class="row line">
              <div class="id-card" data-toggle="modal" data-target="#new_place">
                <div class="col-lg-2">
                  <%= cl_image_tag ("oeyoruj52wwpszcmdwqy.jpg"), height: 125, width: 125, crop: :fill, class: " img-responsive" %>
                </div>
                <div class="col-lg-4">
                  <p class="user-profil">Créer salle</p>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <% if current_user.asso != nil %>
          <div class="user-card">
            <div class="row line">
              <%= link_to @user.asso do %>
                <div class="col-lg-2">
                  <%= cl_image_tag @user.asso.photo, height: 125, width: 125, crop: :fill, class: " img-responsive" %>
                </div>
                <div class="col-lg-4">
                  <p class="user-profil">
                    <%="#{@user.asso.name.capitalize}" %>
                  </p>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <% if current_user.place != nil %>
          <div class="user-card">
            <div class="row line">
              <%= link_to @user.place do %>
                <div class="col-lg-2">
                  <%= cl_image_tag @user.place.photo, height: 125, width: 125, crop: :fill, class: " img-responsive" %>
                </div>
                <div class="col-lg-4">
                  <p class="user-profil">
                    <%="#{@user.place.name.capitalize}" %>
                  </p>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <div class="user-card">
          <div class="row line">
            <div class="id-card" data-toggle="modal" data-target="#new_topic">
              <div class="col-lg-2">
                <%= cl_image_tag ("oeyoruj52wwpszcmdwqy.jpg"), height: 125, width: 125, crop: :fill, class: " img-responsive" %>
              </div>
              <div class="col-lg-4">
                <p class="user-profil">
                  Nouveau Sujet
                </p>
              </div>
            </div>
          </div>
        </div>

        <% if @user == current_user %>
          <div class="user-card">
            <div class="row line">
              <%= link_to user_path(@user), method: :delete, data: { confirm: "Are you sure?" } do %>
                <div class="col-lg-2">
                  <%= cl_image_tag ("oeyoruj52wwpszcmdwqy.jpg"), height: 125, width: 125, crop: :fill, class: " img-responsive" %>
                </div>
                <div class="col-lg-4">
                  <p class="user-profil destroy"><%= t(".delete", default: "delete my account") %></p>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <%= render 'modals'  %>
    </div>


    <div class="profil">
      <div class="id-card" data-toggle="modal" data-target="#update-profil">
        <p>Update profil</p>
      </div>
    </div>

    <div class="quality">
      <p class= "profil-title">Revendiquer un compte artiste, salle ou asso existant?</p>
        <%= social_share_button_tag("revendication de compte", :allow_sites => %w(email), :rel => "modernboxrecords", :url => "https://modernboxrecords.com/users/#{@user.id}" )%>
      <p class="profil-details">modernboxrecords@gmail.com</p>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-12 matches-patern">
        <h3>Matches</h3>
        <hr class="user">
        <p>Les Assos pour toi</p>
        <hr class="user">
        <% if current_user.artist.present? %>
          <div class="row matches">
            <% if @assos.present? %>
              <% @assos.each do |a|%>
                <% if a.genre.name == current_user.artist.genre.name && a.city == current_user.artist.city.downcase && a.number_of_musicians_max <= current_user.artist.number_of_musicians %>
                  <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                    <div class="main">
                      <div class="card">
                        <%= render "assos/asso", asso: a %><br>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
          <hr class="user">

          <p>Les Salles où tu peux jouer</p>
          <hr class="user">
          <div class="row matches">
            <% if @places.present? %>
              <% @places.each do |a|%>
                <% if a.genre.name == current_user.artist.genre.name && a.city.downcase == current_user.artist.city.downcase && a.number_of_musicians_max >= current_user.artist.number_of_musicians %>
                  <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                    <div class="main">
                      <div class="card">
                        <%= render "places/place", place: a %><br>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
          <hr class="user">

          <p>Les Groupes avec lesquels jouer</p>
          <hr class="user">
          <div class="row matches">
            <% if @artists.present? %>
              <% @artists.each do |a|%>
                <% if a.genre.name == current_user.artist.genre.name && a.city.downcase == current_user.artist.city.downcase && a.name != current_user.artist.name %>
                  <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                    <div class="main">
                      <div class="card">
                        <%= render "artists/artist", artist: a %><br>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
          <hr class="user">

          <p>Tu peux toujours checker ces assos</p>
          <hr class="user">
          <div class="row matches">
            <% if @assos.present? %>
              <% @assos.each do |a|%>
                <% if (a.genre.name == current_user.artist.genre.name && a.city.downcase != current_user.artist.city.downcase && a.number_of_musicians_max >= current_user.artist.number_of_musicians) %>
                  <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                    <div class="main">
                      <div class="card">
                        <%= render "assos/asso", asso: a %><br>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
          <hr class="user">

          <p>Ouvertures possibles sur ces salles</p>
          <hr class="user">
          <div class="row matches">
            <% if @places.present? %>
              <% @places.each do |a|%>
                <% if a.genre.name == current_user.artist.genre.name && a.city.downcase != current_user.artist.city.downcase && a.number_of_musicians_max >= current_user.artist.number_of_musicians %>
                  <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                    <div class="main">
                      <div class="card">
                        <%= render "places/place", place: a %><br>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
          <hr class="user">

          <p>Si tu veux faire un plateau ouvert</p>
          <hr class="user">
          <div class="row matches">
            <% if @artists.present? %>
              <% @artists.each do |a|%>
                <% if (a.genre.name == current_user.artist.genre.name && a.city.downcase != current_user.artist.city.downcase && a.name != current_user.artist.name) %>
                  <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                    <div class="main">
                      <div class="card">
                        <%= render "artists/artist", artist: a %><br>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
          <hr class="user">
        <% else %>
          <div class="empty"></div>
        <% end %>



        <% if current_user.place.present? %>
          <p>Match possible avec d'autres structures</p>
          <hr class="user">
          <div class="row matches">
            <% if @assos.present? %>
              <% @assos.each do |a|%>
                <% if a.genre.name == current_user.place.genre.name && a.city.downcase == current_user.place.city.downcase && a.number_of_musicians_max <= current_user.place.number_of_musicians_max %>
                  <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                    <div class="main">
                      <div class="card">
                        <%= render "assos/asso", asso: a %><br>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
          <hr class="user">

          <p>Les Groupes à faire jouer</p>
          <hr class="user">
          <div class="row matches">
            <% if @artists.present? %>
              <% @artists.each do |a|%>
                <% if a.genre.name == current_user.place.genre.name && a.city.downcase == current_user.place.city.downcase && a.number_of_musicians <= current_user.place.number_of_musicians_max %>
                  <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                    <div class="main">
                      <div class="card">
                        <%= render "artists/artist", artist: a %><br>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
          <hr class="user">

          <p>Match possible avec d'autres structures</p>
          <hr class="user">
          <div class="row matches">
            <% if @assos.present? %>
              <% @assos.each do |a|%>
                <% if (a.genre.name == current_user.place.genre.name && a.city.downcase != current_user.place.city.downcase && a.number_of_musicians_max <= current_user.place.number_of_musicians_max) %>
                  <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                    <div class="main">
                      <div class="card">
                        <%= render "assos/asso", asso: a %><br>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
          <hr class="user">

          <p>Des Groupes pour ouvrir la scène</p>
          <hr class="user">
          <div class="row matches">
            <% if @artists.present? %>
              <% @artists.each do |a|%>
                <% if a.genre.name == current_user.place.genre.name && a.city.downcase != current_user.place.city.downcase && a.number_of_musicians <= current_user.place.number_of_musicians_max %>
                  <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                    <div class="main">
                      <div class="card">
                        <%= render "artists/artist", artist: a %><br>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
          <hr class="user">
        <% else %>
          <div class="empty"></div>
        <% end %>

        <p>Les Salles où jouer</p>
        <% if current_user.asso.present? %>
        <hr class="user">
          <div class="row matches">
            <% if @places.present? %>
              <% @places.each do |a|%>
                <% if a.genre.name == current_user.asso.genre.name && a.city.downcase == current_user.asso.city.downcase && a.number_of_musicians_max <= current_user.asso.number_of_musicians_max %>
                  <% result = a %>
                  <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                    <div class="main">
                      <div class="card">
                        <%= render "places/place", place: result %><br>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
          <hr class="user">

          <p>Les Groupes à faire jouer</p>
          <hr class="user">
          <div class="row matches">
            <% if @artist.present? %>
              <% @artists.each do |a|%>
                <% if a.genre.name == current_user.asso.genre.name && a.city.downcase == current_user.asso.city.downcase && a.number_of_musicians <= current_user.asso.number_of_musicians_max %>
                  <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                    <div class="main">
                      <div class="card">
                        <%= render "artists/artist", artist: a %><br>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
          <hr class="user">

          <p>Match possible avec d'autres structures</p>
          <hr class="user">
          <div class="row matches">
            <% if @assos.present? %>
              <% @assos.each do |a|%>
                <% if a.genre.name == current_user.asso.genre.name && a.city.downcase != current_user.asso.city.downcase && a.number_of_musicians_max <= current_user.asso.number_of_musicians_max %>
                  <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                    <div class="main">
                      <div class="card">
                        <%= render "assos/asso", asso: a %><br>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
          <hr class="user">

          <p>Les groupes à faire venir jouer chez toi</p>
          <hr class="user">
          <div class="row matches">
            <% if @artists.present? %>
              <% @artists.each do |a|%>
                <% if a.genre.name == current_user.asso.genre.name && a.city.downcase != current_user.asso.city.downcase && a.number_of_musicians <= current_user.asso.number_of_musicians_max %>
                  <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                    <div class="main">
                      <div class="card">
                        <%= render "artists/artist", artist: a %><br>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
          <hr class="user">
        <% else %>
          <div class="empty"></div>
        <% end %>

        <%= link_to t(".sign_out", default: "SIGN OUT"), main_app.destroy_user_session_path, method: :delete, class: "btn btn-medium" %>
        <div class="copyright last-item">
          © Modern Box Records, All Rights Reserved.
        </div>
      </div>
    </div>
  </div>
</div>




