          <div class="col-lg-3">
            <div class="user-card">
              <%= cl_image_tag @user.artist.photo, height: 300, width: 300, crop: :fill, class: " img-responsive" %>
              <p class="user-profil">
                <%= @user.artist.name.capitalize %>
              </p>
              <p class="user-profil"><%= @user.artist.city %></p>
              <% if @user.artist.bookable? %>
                <p class="user-profil">Disponible pour booking</p>
              <% else %>
                <p class="user-profil">Bientôt disponible</p>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>

      <% if current_user.asso == nil && current_user.place == nil %>
        <div class="col-lg-3">
          <div class="user-card" data-toggle="modal" data-target="#new_asso">
