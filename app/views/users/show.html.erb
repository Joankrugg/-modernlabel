          <div class="user-card">
            <%= link_to user_path(@user), method: :delete, data: { confirm: "Are you sure?" } do %>
              <%= cl_image_tag ("oeyoruj52wwpszcmdwqy.jpg"), height: 300, width: 300, crop: :fill, class: " img-responsive" %>
              <p class="user-profil destroy"><%= t(".delete", default: "delete my account") %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
