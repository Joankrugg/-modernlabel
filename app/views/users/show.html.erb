<div class="container">
  <h2 class="negative top">
    ACTIONS
  </h2>
</div>
<div class="container">
  <div class="profile-header-container text-center">
    <div class="information">
      <div class="welcome">
        Welcome
        <% if current_user.first_name || nil %>
        <%= current_user.first_name %>
        <% end %>
        !
      </div>
      <h5>Perform an action</h5>
      <h5> and get into modern box records' network </h5>
    </div>
  </div>
</div>
<div class="container user-actions">
  <div class="profile-header-container text-center">
    <div class="tabs">
      <a class="tab active" data-target="#profile">
        <div class=" btn-medium btn ">Actions</div>
      </a>
      <a class="tab" data-target="#Search">
        <div class=" btn-medium btn ">Search</div>
      </a>
    </div>
  </div>
</div>
<div class="container">
  <div class="tab-content top" id="profile">
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-2 col-xs-offset-4">
          <div class="action"><%=image_tag "mb_logo_pink", class: "disc" %></div><br>
          <% if current_user.artist || nil %>
          <%=link_to "Update artist", edit_artist_path %>
          <% else %>
          <%=link_to "Create artist", new_artist_path %>
          <% end %>
        </div>
        <div class="col-md-offset-1 col-md-2 col-xs-offset-4">
          <div class="action"><%=image_tag "mb_logo_pink", class: "disc" %></div><br>
            <%=link_to "Check artists ", artists_path %>
        </div>
        <div class="col-md-offset-1 col-md-2 col-xs-offset-4">
          <div class="action"><%=image_tag "mb_logo_pink", class: "disc" %></div><br>
            <%=link_to "Create release", new_release_path %>
        </div>
        <div class="col-md-offset-1 col-md-2 col-xs-offset-4">
          <div class="action"><%=image_tag "mb_logo_pink", class: "disc" %></div><br>
            <%=link_to "Check releases ", releases_path %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-offset-1 col-md-2 col-xs-offset-4">
          <div class="action"><%=image_tag "mb_logo_pink", class: "disc" %></div><br>
            <%=link_to "create performance", new_performance_path %>
        </div>
        <div class="col-md-offset-1 col-md-2 col-xs-offset-4">
          <div class="action"><%=image_tag "mb_logo_pink", class: "disc" %></div><br>
            <%=link_to "check performance", performances_path %>
        </div>
      </div>
    </div>
  </div>
</div>


