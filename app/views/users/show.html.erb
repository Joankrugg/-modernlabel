<div class="profile-header-wrapper">
  <div class="container profile-header-container text-center">
    <div class="tabs">
      <a class="tab active" data-target="#profile">
        <h3>Profil hors musique</h3>
      </a>
      <a class="tab" data-target="#artists">
        <h3>Mon profil artiste</h3>
      </a>
      <a class="tab" data-target="#performances">
        <h3>Mes dates de concert</h3>
      </a>
    </div>
  </div>
</div>

<div class="container text-center">
  <div class="tab-content" id="profile">
    <div class="my-profile" id="profile">
      <%= render 'user', user: @user %>
    </div>
    <p>Changer mon profil </p>
    <i class="fa fa-user-circle" data-toggle="collapse" data-target="#collapseProfile" aria-expanded="false" aria-controls="collapseProfile" ></i>
    <div class="change-profile">
      <div class="collapse" id="collapseProfile">
        <div class="well" id="well">
          <%= render 'form', user: @user %>
        </div>
      </div>
    </div>
  </div>
  <div class="tab-content hidden" id="artists">
    <div class="my-profile" id="profile">
      <%= link_to @user.artist, class: 'product-inherit' do %>
        <%= cl_image_tag @user.artist.photo, height: 400, crop: :fill, class: "product-image hidden-xs" %>
        <div class='product-body'>
          <h3><%= @user.artist.name %></h3>
          <p><%= @user.artist.city %></p>
          <h5>Description</h5>
          <% @user.artist.description %>
          <% end %>
        </div>
      <% if @user.artist %>
      <h2><%= link_to "modifier profil artiste", edit_artist_path, class: 'btn btn-medium' %></h2>
      <% else %>
      <h2><%= link_to "ajouter un artiste", new_artist_path, class: 'btn btn-medium' %></h2>
      <% end %>
      <h2><%= link_to "ajouter un release", new_release_path, class: 'btn btn-medium' %></h2>
    </div>
  <div class="tab-content hidden" id="performances">
          <h2><%= link_to "ajouter une date", new_performance_path, class: 'btn btn-medium' %></h2>
    </div>
  </div>
</div>

