<% content_for(:title_tag) do %>
  -<%= @hardware.name %>- on Modern Box Records
<% end %>
<%= render'shared/place_search' %>
<div class="container card-model">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-2 col-lg-8">
      <h1 class= "hidden-lg hidden-md hidden-sm page-title title-top">-<%=@hardware.name.upcase %>-</h1>
      <div class="info-card">
        <%= cl_image_tag @hardware.photo, height: 600, width: 700, crop: :fill, class: "style_image img-responsive"%>
          <div class="info-card-details">
            <h3>PLACE: <%= @hardware.place.name %></h3>
            <h5>NUMBER: <%= @hardware.number %></h5>
            <div class="row">
              <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-2 col-lg-8">
                <div class="social-card-content">
                  <%= link_to "Back to #{@hardware.place.name}", place_path(@hardware.place) %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <% if @hardware.place == current_user.place  %>
      <div class="option">
         <div class="banner-content">
            <div class="mb">
              <div class="action">
                <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-2 col-lg-8">
                  <p style="color: $black;"><%="Edit #{@hardware.name}"%></p>
                    <%= render 'hardwares/form', hardware: @hardware %>
                    <%= link_to t(".Delete", default: "delete this"), hardware_path(@hardware), class: "call-to-action btn-medium btn last-item", method: :delete, data: { confirm: "Are you sure?" } %><br>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
