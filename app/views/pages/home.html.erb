</div>
<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h4 class="section-title-left">
          LAST NEWS
      </h4>
      <% if @actus.present? %>
        <% @actus.each do |actu| %>
          <%= link_to actu do %>
            <div class="last-news-card">
              <div class="last-news-picture">
                <div class="row">
                  <div class="col-lg-12">
                    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                      <%= image_tag actu.photo, height: 120, width: 120, crop: :fit, class: "img-responsive" %>
                    </div>
                    <div class="col-lg-9">
                      <div class="last-news-title">
                        <%= actu.title.upcase %>
                      </div>
                      <div class="last-news-edition">
                        <%= actu.edition %>
                      </div>
                      <hr>
                      <div class="last-news-description">
                        <%= actu.description %>
                      </div>
                      <div class="news-content-link">
                        <div class="news-link">
                          <a href="https://www.facebook.com/sharer/sharer.php" alt="share on fb">partager</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          <hr class="last-news-segment">
        <% end %>
      <% end %>
    </div>
    <div class="col-lg-4">
      <%= cl_image_tag("logo_9_aiamw0.png", :quality=>"jpegmini:1", class: "img-responsive") %>
    </div>
    <div class="col-lg-4 connection">
      <%= link_to t(".sign_up", default: "SIGN UP"), new_user_registration_path, class: "btn btn-medium" %>
      <%= link_to t(".sign_in", default: "SIGN IN"), new_user_session_path, class: "btn btn-medium" %>
    </div>
    <div class="col-lg-4">
      <h4 class="section-title-right">
        NEW ARTISTS
      </h4>
      <% if @artists.present? %>
        <% @artists.each do |artist| %>
          <div class="artists-samples">
            <div class="col-lg-offset-1 col-lg-5">
            <%= image_tag artist.photo, height: 100, width: 100, crop: :fit, class: "img-responsive" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <hr class="last-news-segment">
    <div class="col-lg-4">
      <h4 class="section-title-right">
        NEW RELEASES
      </h4>
      <% if @releases.present? %>
        <% @releases.each do |release| %>
          <div class="releases-samples">
            <div class="col-lg-offset-1 col-lg-5">
              <%= image_tag release.photo, height: 100, width: 100, crop: :fit, class: "img-responsive" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <hr class="last-news-segment">
    <div class="col-lg-offset-8 col-lg-4">
      <h4 class="section-title-right">
        NEW VIDEOS
      </h4>
      <% if @videos.present? %>
        <% @videos.each do |video| %>
          <div class="col-xs-12 col-sm-6 col-md-6 col-lg-12">
            <div class="videos-samples">
              <iframe src='https://www.youtube.com/embed/<%= video.youtube_link[32..80] %>?rel=0&autoplay=<%= params[:autoplay] || 0 %>' height='300' width='400' class='img-responsive' frameborder='0' allowfullscreen></iframe>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>


