<div class="container in">
  <div class="box-content">

    <h2 class="box"><%= t(".resend_confirmation_instructions") %></h2>

    <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>
      <%= f.full_error :confirmation_token %>

      <div class="form-inputs box">
        <%= f.input :email, required: true, autofocus: true %>
      </div>

      <div class="form-actions box press">
        <%= f.button :submit, t(".resend_confirmation_instructions") %>
      </div>
    <% end %>

    <div class="box press"><%= render "devise/shared/links" %></div>
  </div>
</div>
