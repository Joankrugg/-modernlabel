<div class="container">
  <div class="col-xs-12 col-sm-offset-3 col-sm-6 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6 in">
    <div class="registration-content">
      <div class="title-top" style= "text-align: center; font-size: 30px;"> <%= t(".sign_in") %></div>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, :html=> { class: 'subscribe' }, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions box press">
          <%= f.button :submit, t(".sign_in") %>
        </div>
      <% end %>
      <h5 class="form-inputs last-item" style="color: $black;">Probl√®me provisoire dans la connexion avec facebook.</h5>

      <div class="box">
        <%= render "devise/shared/links" %>
      </div>
      <div class="fb-login-button" data-max-rows="1" data-size="large" data-button-type="continue_with" data-show-faces="false" data-auto-logout-link="false" data-use-continue-as="false"></div>
    </div>
  </div>
</div>
