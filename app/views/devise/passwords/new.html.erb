<div class="container">
  <div class= "col-xs-12 col-sm-offset-3 col-sm-6 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6 in">
    <div class="box-content">

      <h2 class="box"><%= t(".forgot_your_password") %></h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs box">
          <%= f.input :email, required: true, autofocus: true %>
        </div>

        <div class="form-actions box press">
          <%= f.button :submit, t(".send_me_reset_password_instructions") %>
        </div>
      <% end %>

      <div class="box press"><%= render "devise/shared/links" %></div>
    </div>
  </div>
</div>
