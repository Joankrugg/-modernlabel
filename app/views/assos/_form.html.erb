<%= simple_form_for @asso, defaults: { label_html: { class: 'labels' } } do |f| %>
  <% if @asso.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @asso.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container group in">
    <div class="row">
      <div class="col-lg-6 col-sm-12">
        <%= f.input :name, required: false, placeholder: 'we need one' %>
      </div>
      <div class="col-lg-6 col-sm-12">
        <%= f.input :city, required: false, placeholder: 'we need one'%>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6 col-sm-12">
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
      </div>
      <div class="col-lg-6 col-sm-12">
        <%= f.association :genre %>
      </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="col-lg-12 col-sm-12">
          <%= f.input :facebook_page, required: false, placeholder: 'we need one' %>
        </div>
      </div>
    </div>
    <%= f.submit %>
  </div>
<% end %>

