<div class="negative top">
  <div class="search search-fixed">
    <%= form_tag(assos_path, method: :get) do %>
      <%= text_field_tag :search, nil, placeholder: "Search assos", class: "form-control" %>
      <%= submit_tag 'Search', style: "display: none;" %>
    <% end %>
  </div>
</div>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,1), rgba(0,0,0,0.2)), url('https://res.cloudinary.com/da2krghvd/image/upload/s--8nxi3HAK--/q_jpegmini/v1505755372/corey-blaz-5003_sp9w4e.jpg');">
  <div class="banner-content">
    <!--section d'ensemble-->
    <div class="container items">
      <div class="row">
        <% @assos.each do |a|%>
          <div class="col-xs-6 col-sm-4 col-md-3 col-lg-3">
            <div class="main">
              <div class="card">
                <%= render "asso", asso: a %><br>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
