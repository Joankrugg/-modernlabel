<% content_for(:title_tag) do %>
  -<%= @asso.name %>-
<% end %>
<%= render'shared/asso_search' %>
<div class="container card-model">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-1 col-sm-7 col-md-offset-1 col-md-7 col-lg-offset-1 col-lg-7">
      <h1 class= "hidden-lg hidden-md hidden-sm title-top" style= "text-align: center;">-<%= @asso.name.upcase %>-</h1>
      <div class="info-card">
        <%= cl_image_tag @asso.photo, height: 600, width: 700, crop: :fill, class: "img-responsive"%>
        <div class="info-card-details">
          <h3>-<%= @asso.name.upcase %>-</h3>
          <h5><%= t(".city")%>: <%= @asso.city %></h5>
          <h5><%= t(".genre")%>:<%= @asso.genre.name %></h5>
          <h5><%= t(".creation")%>: <%= @asso.year_of_creation %> </h5>
          <% if @asso.user == current_user %>
            <%= link_to t(".Delete", default: "delete this"), asso_path(@asso), class: "call-to-action btn-medium btn ", method: :delete, data: { confirm: "Are you sure?" } %>
          <% end %>
        </div>
      </div>
    </div>
    <div class=" col-lg-3 col-md-3 col-sm-3 col-xs-12">
      <div class="info-card productions hidden-xs hidden-sm hidden-md" id="header">
        <%= cl_image_tag @asso.photo, height: 80, width: 100, crop: :fill, class: "img-responsive"%>
      </div>
      <div class="info-card productions" id= "bio">
        <h4><%=t(".biography") %></h4>
        <% if @asso.description.present? %>
          <p><%= @asso.description %></p>
        <% else %>
          <p>Association's description would be cool to know</p>
        <% end %>
        <% if @asso.activity.present? %>
          <p><%= @asso.activity.name %></p>
        <% else %>
          <p>Your Activity would be cool to know</p>
        <% end %>
      </div>
      <div class="info-card productions">
        <%= image_tag 'logo_9.png', height: 20, width: 110, crop: :fit, class: "img-responsive" %>
      </div>
    </div>
  </div>
  <div class="row">
    <% if @asso.services.present? %>
      <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-1 col-md-10 col-lg-offset-1 col-lg-10 model-items">
        <h2>//SERVICES\\</h2>
        <hr>
      </div>
      <% @asso.services.each do |service| %>
        <%= link_to service do %>
          <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-1 col-md-10 col-lg-offset-1 col-lg-10 model-items">
            <div class="info-card productions">
              <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                <%= cl_image_tag service.photo, height: 100, width: 100, crop: :fill, class: "img-rounded img-responsive" %>
              </div>
              <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
                <div class="col-lg-4">
                  <p style="color: black; text-align: left; font-weight: bold"><%= t(".NAME") %>: -<%= service.name %>-</p>
                  <p style="color: black; text-align: left"><%= t(".PRICE") %>: -<%= service.adhesion_fee %>Euros-</p>
                </div>
                <div class="col-lg-8">
                  <p style="color: black; text-align: left"><%= t(".DESCRIPTION") %>: -<%= service.description %>-</p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="row">
    <% if @asso.videos.present? %>
     <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-1 col-md-10 col-lg-offset-1 col-lg-10 model-items">
        <h2>//VIDEOS\\</h2>
        <hr>
      </div>
      <% @asso.videos.each do |video| %>
        <%= link_to video do %>
          <div class="col-xs-12 col-sm-offset-1 col-sm-5 col-md-offset-1 col-md-5 col-lg-offset-1 col-lg-5 model-items">
            <div class="video">
              <iframe src='https://www.youtube.com/embed/<%= video.youtube_link[32..80] %>?rel=0&autoplay=<%= params[:autoplay] || 0 %>' height='600' width='760' class='img-responsive' frameborder='0' allowfullscreen></iframe>
            </div>
          </div>
          <div class="col-xs-12 col-sm-5 col-md-5 col-lg-5">
            <div class= "lead">
              <div class="productions">
                <h1>-<%= video.title  %>-</h1>
                <h1>-<%= @asso.name  %>-</h1>
                <%= render 'shared/icons' %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="row">
    <% if @asso.performances.present? %>
      <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-1 col-md-10 col-lg-offset-1 col-lg-10 model-items">
        <h2>//CONCERTS\\</h2>
        <hr>
      </div>
      <% @asso.performances.each do |performance| %>
        <%= link_to performance do %>
          <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-1 col-md-10 col-lg-offset-1 col-lg-10 model-items">
            <div class="info-card productions">
              <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                <%= cl_image_tag performance.photo, height: 110, width: 110, crop: :fill, class: "img-rounded img-responsive" %>
              </div>
              <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
                <div class="col-lg-4">
                  <p style="color: black; text-align: left; font-weight: bold"><%= t(".title") %>: -<%= performance.name %>-</p>
                  <p style="color: black; text-align: left"><%= t(".CITY") %>: -<%= performance.city %>-</p>
                  <p style="color: black; text-align: left"><%= t(".PRICE") %>: -<%= performance.price %>Euros-</p>
                </div>
                <div class="col-lg-4">
                  <p style="color: black; text-align: left"><%= t(".DATE") %>: -<%= performance.start_time.strftime("%d/%m/%Y Ã  %H:%M") %>-</p>
                  <p style="color: black; text-align: left"><%= t(".ADDRESS") %>: -<%= performance.place_address %>-</p>
                </div>
                <div class="col-lg-4">
                  <% if performance.facebook_event? %>
                    <%= link_to performance.facebook_event, target: :_blank do %>
                      <i class="fa fa-facebook"></i>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <%= render 'tabs' %>
</div>
