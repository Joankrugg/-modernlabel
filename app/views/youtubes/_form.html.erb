<%= simple_form_for ([ artist, youtube ]) , defaults: { label_html: { class: 'labels' } } do |f| %>
  <% if @youtube.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @youtube.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-1 col-lg-10 form">
    <%= f.input :link, required: false, placeholder: 'https://www.youtube.com/...' %>
    <div class="validate">
      <%= f.button :submit, 'Valider', class: "btn btn-medium-white last-item" %>
    </div>
  </div>
<% end %>
