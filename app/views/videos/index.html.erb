<div class="index-wallpapers">
  <div class="search">
    <%= render 'shared/video_search' %>
  </div>
  <div class="index-page">
    <div class="container">
      <div class="row">
        <% if @videos.present? %>
          <% @videos.each do |video|%>
            <div class="col-xs-6 col-sm-4 col-md-3 col-lg-3">
              <div class="main">
                <div class="card">
                  <div class="info-card">
                    <iframe src='https://www.youtube.com/embed/<%= video.youtube_link[32..80] %>?rel=0&autoplay=?=1 modestbranding<%= params[:autoplay] || 0 %>' height='600' width='760' class='img-responsive' frameborder='0' allowfullscreen></iframe>
                    <%= link_to video do %>
                      <div class="info">
                        <p class="band-name">-<%= video.title  %>-</p>
                        <% if video.artist.present? %>
                          <p class="band-name"><%= video.artist.name %></p>
                        <% end %>
                        <% if video.asso.present? %>
                          <p class="band-name"><%= video.asso.name %></p>
                        <% end %>
                        <% if video.place.present? %>
                          <p class="band-name"><%= video.place.name %></p>
                        <% end %>
                        <p class="band-name">-<%= video.genre.name %>-</p>
                        <%= render 'shared/icons' %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <%= render 'shared/no_result' %>
        <% end %>
      </div>
    </div>
  </div>
  <%= render 'shared/footer' %>
</div>
