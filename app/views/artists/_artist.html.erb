<div class="[ info-card ]">
  <%= link_to artist do %>
    <%= cl_image_tag artist.photo, :effect=>"grayscale", height: 250, width: 400, crop: :fill, class: "style_image img-responsive" %>
<% end %>
  <div class="info">
    <h1>-<%= artist.name.capitalize%>-</h1>
    <h1>De <%= artist.city %></h1>
  </div>
</div>
