<div class="row">
  <div class="option">
    <div class="banner-content">
      <% if @artist.user == current_user  %>
        <div class="container actions">
          <div class="row">
            <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-1 col-lg-10 tabs">
              <a class="tab col-lg-3 col-md-3 col-sm-3 col-xs-3 active" data-toggle="modal" data-target="#bands">
                <h5>Band</h5>
              </a>
              <a class="tab col-lg-3 col-md-3 col-sm-3 col-xs-3" data-toggle="modal" data-target="#prods">
                <h5>Prods</h5>
              </a>
              <a class="tab col-lg-3 col-md-3 col-sm-3 col-xs-3" data-toggle="modal" data-target="#shows">
                <h5>Shows</h5>
              </a>
              <a class="tab col-lg-3 col-md-3 col-sm-3 col-xs-3" data-toggle="modal" data-target="#videos">
                <h5>Vid√©os</h5>
              </a>
            </div>
          </div>

          <div class="modal fade" id="bands" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLongTitle">EDIT BAND</h5>
                  <div class="modal-body">
                    <%= render 'form', artist: @artist %>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="modal fade" id="prods" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLongTitle">CREATE RELEASE</h5>
                  <div class="modal-body">
                    <%= render 'releases/form_artist', release: @release %>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="modal fade" id="shows" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLongTitle">CREATE PERFORMANCE</h5>
                  <div class="modal-body">
                    <%= render 'performances/form_artist', performance: @performance %>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="modal fade" id="videos" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLongTitle">CREATE VIDEOS</h5>
                  <div class="modal-body">
                    <%= render 'videos/form_artist', video: @video %>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <div class="container actions">
          <div class="row" id="ratings">
            <% if @artist.ratings.blank? %>
              <p class="tab-fake" style="text-align: center;">Be the first to leave a rating for <%= @artist.name %>
              </p>
            <% else %>
              <p class="tab-fake" style="text-align: center;">press to leave a rating for <%= @artist.name %>
              </p>
            <% end %>
          </div>
        </div>
        <div class="mb">
          <div class="action">
            <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-2 col-lg-8">
              <%= render 'ratings/form', artist: @artist, rating: @rating %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
