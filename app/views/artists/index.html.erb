<div class="negative top">
  <div class="artist_search form-group">
  <%= form_tag(artists_path, method: :get) do %>
    <%= text_field_tag :search, nil, placeholder: "Search artists ...", class: "form-control" %>
    <%= submit_tag 'Search', style: "display: none;" %>
  <% end %>
  </div>
</div>

<div class="index">
  <div class="row">
    <div class="col-lg-2 left">
      <div class="col-lg-12">
        <div class="[ info-card ]">
          <div class="info" id="column">
            <br>
            <h1>Next performances!</h1>
            <br>
            <h1>Check these alerts</h1>
            <h1>before checking the bands </h1>
          </div>
        </div>
      </div>
      <% @performances.each do |performance|%>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-12">
          <div class="[ info-card ]">
            <%= link_to performance do %>
              <div class="info" id="perf">
                <h1>-<%= performance.artist.name%>-</h1>
                <h1>-<%= performance.city.capitalize%>-</h1>
                <h1><%= performance.start_time.strftime('%d %B %Y') %></h1>
                <h1><%= performance.place_address %></h1>
                <h1><%= performance.price %></h1>
                <h1><%= performance.facebook_event %></h1>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

      <div class="col-lg-8 center">
        <div class="information">
          <div class="welcome">
            Welcome!
          </div>
        <h5>Perform an action</h5>
        <h5>and get into modern box records' network </h5>
        </div>
        <div class="row">
          <% @artists.each do |a|%>
            <div class="col-xs-6 col-sm-4 col-md-4 col-lg-3">
              <div class="main">
                <div class="card">
                  <%= render "artist", artist: a %><br>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-lg-2 right">
        <div class="row">
          <div class="col-lg-4">
            <div class="advertisement">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

