<div class="form-artist">
  <%= simple_form_for @artist, defaults: { label_html: { class: 'labels' } } do |f| %>
    <% if @artist.errors.any? %>
      <div id="error_explanation">
        <ul>
        <% @artist.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-1 col-lg-10 form">
      <div class="form-group">
        <label class="control-label check_boxes optional">Instruments hiring</label>
        <input type="hidden" name="artist[instrument_ids][]" value="">
        <div class="instrument-choices">
          <% Instrument.all.each do |instrument| %>
            <input type="checkbox" class="hidden" value="<%= instrument.id %>" name="artist[instrument_ids][]" id="artist_instrument_ids_<%= instrument.id %>">
            <label class="instrument-choice" for="artist_instrument_ids_<%= instrument.id %>">
              <%= instrument.name %>
            </label>
          <% end %>
        </div>
      </div>
      <div class="quality">
        <%= f.button :submit, 'Valider', class: 'btn btn-large-white' %>
        <button type="button" class="btn btn-large-white last-item" data-dismiss="modal">Fermer</button>
      </div>
    </div>
  <% end %>
</div>
