<%= simple_form_for(@artist) do |f| %>
  <% if @artist.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @artist.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <%= f.input :name %>
    <%= f.input :city %>
    <%= f.input :year_of_creation %>
    <%= f.input :number_of_musicians %>
    <%= f.input :description %>
    <%= f.input :facebook_link %>
    <%= f.input :insta_link %>
    <%= f.input :contact %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.input :youtube_channel %>
    <%= f.input :soundcloud_link %>
    <%= f.input :twitter_link %>
    <%= f.submit %>
  </div>
<% end %>

