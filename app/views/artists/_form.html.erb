<%= simple_form_for @artist, defaults: { label_html: { class: 'labels' } } do |f| %>
  <% if @artist.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @artist.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container group in">
    <div class="row">
      <div class="col-lg-offset-2 col-lg-8">
        <div class="row">
          <div class="col-lg-6 col-sm-12">
            <%= f.input :name, required: false, placeholder: 'we need one' %>
          </div>
          <div class="col-lg-6 col-sm-12">
            <%= f.input :city, required: false, placeholder: 'we need one'%>
          </div>
        </div>
        <div class="row">
         <div class="col-lg-6 col-sm-12">
            <%= f.association :genre, required: false, placeholder: 'we need one'%>
          </div>
          <div class="col-lg-6 col-sm-12">
            <%= f.input :contact, placeholder: 'band@gmail.com' %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-6 col-sm-12">
            <%= f.input :number_of_musicians, required: false, collection: 1..12 %>
          </div>
          <div class="col-lg-6 col-sm-12">
            <%= f.input :year_of_creation, required: false, collection: 1990..2017 %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-6 col-sm-12">
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
          </div>
          <div class="col-lg-6 col-sm-12">
            <%= f.input :mp3, as: :attachinary %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <%= f.input :description, required: false, placeholder: 'we need these few words (max 140 characters)', input_html: { maxlength: 140 }%>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-6 col-sm-12">
            <%= f.input :facebook_link, required: false, placeholder: 'we need one' %>
          </div>
          <div class="col-lg-6 col-sm-12">
            <%= f.input :insta_link, placeholder: "optional, but you'd better have one to give"%>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-6 col-sm-12">
            <%= f.input :youtube_channel, placeholder: "optional, but you'd better have one to give"%>
          </div>
          <div class="col-lg-6 col-sm-12">
            <%= f.input :soundcloud_link, placeholder: "optional, but you'd better have one to give" %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-6 col-sm-12">
            <%= f.input :twitter_link, placeholder: "optional, but you'd better have one to give" %>
          </div>
          <div class="col-lg-6 col-sm-12">
            <%= f.input :bandcamp_link, placeholder: "optional, but you'd better have one to give" %>
          </div>
        </div>
        <%= f.button :submit, class: "btn btn-medium" %>
      </div>
    </div>
  </div>
<% end %>

