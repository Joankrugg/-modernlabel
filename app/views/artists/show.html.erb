<% content_for(:title_tag) do %>
  -<%= @artist.name %>-
<% end %>
<% content_for(:description) do %>
  <%= @artist.description %>
<% end %>
<%= render 'shared/artist_search' %>
<div class="container card-model">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-2 col-lg-8">
      <div class="info-card">
        <%= cl_image_tag @artist.photo, height: 600, width: 600, crop: :fill, class: "img-responsive"%>
        <div class="[ info-card-details ]">
          <h3>-<%= @artist.name.upcase %>-</h3>
          <h5><%= t(".city")%>: <%= @artist.city %></h5>
          <h5><%= t(".number_of_musicians")%>: <%= @artist.number_of_musicians %> </h5>
          <div class="ratings">
            <%= @artist.average_stars %>
          </div>
          <% if @artist.mp3? %>
            <% mp3 = @artist.mp3.path %>
            <audio controls>
              <source src=<%= cl_video_path(mp3) %> type="audio/mpeg">
            </audio>
          <% end %>
          <%= render 'shared/social-networks' %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-1 col-lg-10 artist-items">
      <% if @artist.releases.present? %>
        <% @artist.releases.each do |release| %>
          <%= link_to release do %>
            <div class="info-card productions">
              <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                <%= cl_image_tag release.photo, height: 100, width: 100, crop: :fill, class: "img-rounded img-responsive" %>
              </div>
              <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
                <p style="color: black; text-align: left; font-weight: bold"><%= release.title.upcase %>-<%= release.year_of_creation %></p>
                <p style="color: black; text-align: left"><%= release.description %></p>
                <p style="color: black; text-align: left"><%= release.average_hearts %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6">
      <% if @artist.videos.present? %>
        <% @artist.videos.each do |video| %>
          <div class="info-card">
            <iframe src='https://www.youtube.com/embed/<%= video.youtube_link[32..80] %>?rel=0&autoplay=<%= params[:autoplay] || 0 %>' height='600' width='760' class='img-responsive' frameborder='0' allowfullscreen></iframe>
            <%= link_to video do %>
              <div class="info">
                <h1>-<%= @video.title  %>-</h1>
                <h1>-<%= @artist.name  %>-</h1>
                <h1>-modernboxrecords-</h1>
                <%= render 'shared/icons' %>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-1 col-lg-10 artist-items">
      <% if @artist.performances.present? %>
        <% @artist.performances.each do |performance| %>
          <%= link_to performance do %>
            <div class="info-card productions">
              <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                <%= cl_image_tag performance.photo, height: 100, width: 100, crop: :fill, class: "img-rounded img-responsive" %>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
  <%= render 'tabs' %>
</div>








