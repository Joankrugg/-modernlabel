<% content_for(:title_tag) do %>
  -<%= @artist.name %>-
<% end %>
<% content_for(:description) do %>
  <%= @artist.bio %>
<% end %>
<%= render 'shared/artist_search' %>
<div class="container card-model">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-1 col-sm-7 col-md-offset-1 col-md-7 col-lg-offset-1 col-lg-7">
      <h1 class= "hidden-lg hidden-md hidden-sm title-top" style ="text-align: center;">-<%= @artist.name.upcase %>-</h1>
      <div class="info-card">
        <%= cl_image_tag @artist.photo, height: 600, width: 700, crop: :fill, class: "img-responsive"%>
        <div class="info-card-details">
          <h3><%=t(".biography")%>:</h3>
          <% if @artist.bio.present? %>
            <p><%= @artist.bio %></p>
          <% else %>
            <p>il faudra ajouter la bio ici</p>
          <% end %>

          <% if @artist.mp3? %>
            <% mp3 = @artist.mp3.path %>
            <audio controls>
              <source src=<%= cl_video_path(mp3) %> type="audio/mpeg">
            </audio>
          <% end %>
          <%= render 'shared/social-networks' %>
        </div>
      </div>
    </div>
    <div class=" col-lg-3 col-md-3 col-sm-3 col-xs-12">
      <div class="info-card productions hidden-xs hidden-sm hidden-md" id="header">
        <%= cl_image_tag @artist.photo, height: 80, width: 100, crop: :fill, class: "img-responsive"%>
      </div>
      <div class="info-card productions" id= "bio">
        <h3>-<%= @artist.name.upcase %>-</h3>
        <h5><%= t(".city")%>: <%= @artist.city %></h5>
        <h5><%= t(".county")%>: <%= @artist.county.name %></h5>
        <h5><%= t(".number_of_musicians")%>: <%= @artist.number_of_musicians %> </h5>
        <h5><%= t(".genre")%>: <%= @artist.genre.name %></h5>
        <h5><%= t(".creation_date")%>: <%= @artist.year_of_creation %></h5>
        <div class="ratings">
          <%= @artist.average_stars %>
        </div>
        <% if @artist.user == current_user %>
          <%= link_to t(".Delete", default: "delete this"), artist_path(@artist), class: "call-to-action btn-medium btn ", method: :delete, data: { confirm: "Are you sure?" } %>
        <% end %>
      </div>
      <div class="info-card productions hidden-sm">
        <% if @artist.mp3? %>
          <% mp3 = @artist.mp3.path %>
          <audio controls>
            <source src=<%= cl_video_path(mp3) %> type="audio/mpeg">
          </audio>
        </div>
      <% else %>
        <%= image_tag 'logo_mbr.png', height: 20, width: 110, crop: :fit, class: "img-responsive" %>
      <% end %>
    </div>
  </div>
</div>
<%= render 'tabs' %>
<div class="container card-model">
  <div class="row">
    <div class="col-lg-12">
      <% if @artist.releases.present? %>
        <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-1 col-md-10 col-lg-offset-1 col-lg-10 model-items">
          <h2>PRODS</h2>
          <hr>
        </div>
        <% @artist.releases.each do |release| %>
          <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-1 col-md-10 col-lg-offset-1 col-lg-10 model-items">
            <%= link_to release do %>
              <div class="info-card productions">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                  <%= cl_image_tag release.photo, height: 150, width: 150, crop: :fill, class: "img-rounded img-responsive" %>
                </div>
                <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
                  <div class="col-lg-4">
                    <p style="color: black; text-align: left"><%=t(".title") %>: <%= release.title.upcase %></p>
                    <p style="color: black; text-align: left"><%= t(".EDITION") %>: <%= release.record.name %></p>
                    <p style="color: black; text-align: left"><%= t(".PRICE") %>: <%= release.price %>Euros</p>
                  </div>
                  <div class="col-lg-4">
                    <p style="color: black; text-align: left"><%= t(".GENRE") %>: <%= release.genre.name %></p>
                    <p style="color: black; text-align: left"><%= t(".RECORD") %>: <%= release.year_of_creation %></p>
                    <p style="color: black; text-align: left"><%= release.average_hearts %></p>
                  </div>
                  <div class="col-lg-4">
                    <% if release.youtube_link.present? %>
                      <%= link_to release.youtube_link, target: :_blank do %>
                        <i class="fa fa-youtube"></i>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <% if @artist.videos.present? %>
        <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-1 col-md-10 col-lg-offset-1 col-lg-10 model-items">
          <h2>VIDEOS</h2>
          <hr>
        </div>
        <% @artist.videos.each do |video| %>
          <div class="col-xs-12 col-sm-offset-1 col-sm-5 col-md-offset-1 col-md-5 col-lg-offset-1 col-lg-5 model-items">
            <div class="video">
              <iframe src='https://www.youtube.com/embed/<%= video.youtube_link[32..120] %>?rel=0&autoplay=<%= params[:autoplay] || 0 %>' height='600' width='760' class='img-responsive' frameborder='0' allowfullscreen></iframe>
            </div>
          </div>
          <%= link_to video do %>
            <div class="col-xs-12 col-sm-5 col-md-5 col-lg-5">
              <div class= "lead">
                <div class="productions">
                  <h1><%= video.title.upcase  %></h1>
                  <h1><%= @artist.name  %></h1>
                  <%= render 'shared/icons' %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <% if @artist.performances.present? %>
        <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-1 col-md-10 col-lg-offset-1 col-lg-10 model-items">
          <h2>CONCERTS</h2>
          <hr>
        </div>
        <% @artist.performances.each do |performance| %>
          <%= link_to performance do %>
            <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-1 col-md-10 col-lg-offset-1 col-lg-10 model-items">
              <div class="info-card productions">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                  <%= cl_image_tag performance.photo, height: 110, width: 110, crop: :fill, class: "img-rounded img-responsive" %>
                </div>
                <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
                  <div class="col-lg-4">
                    <p style="color: black; text-align: left"><%=t(".title") %>: <%= performance.name.upcase %></p>
                    <p style="color: black; text-align: left"><%=t(".CITY") %>: <%= performance.city %></p>
                    <p style="color: black; text-align: left"><%=t(".PRICE")%>: <%= performance.price %>Euros</p>

                  </div>
                  <div class="col-lg-4">
                    <p style="color: black; text-align: left">DATE: <%= performance.start_time.strftime("%d/%m/%Y Ã  %H:%M") %></p>
                    <p style="color: black; text-align: left"><%=t(".ADDRESS") %>: <%= performance.place_address %></p>
                  </div>
                  <div class="col-lg-4">
                    <% if performance.facebook_event? %>
                      <%= link_to performance.facebook_event, target: :_blank do %>
                        <i class="fa fa-facebook"></i>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>








