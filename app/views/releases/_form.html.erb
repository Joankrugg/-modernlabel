<%= simple_form_for @release, defaults: { label_html: { class: 'labels' } } do |f| %>
  <% if @release.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @release.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-1 col-lg-10 form">
    <%= f.input :title, required: false, placeholder: t(".placeholder_1", default: "we need one") %>
    <%= f.association :record, required: false %>
    <%= f.association :genre, required: false %>
    <%= f.input :price, required: false, collection: 1..20 %>
    <%= f.input :year_of_creation, required: false, collection: 1990..2018  %>
    <%= f.input :description, required: false, placeholder: t(".placeholder_1", default: "we need one"), input_html: { maxlength: 140 } %>
    <%= f.input :youtube_link, placeholder: t(".placeholder_2", default: "optional") %>
    <%= f.input :bandcamp_link, placeholder: t(".placeholder_2", default: "optional") %>
    <%= f.input :photo, required: false%>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.button :submit, class: "btn btn-medium-white last-item" %>
  </div>
<% end %>


