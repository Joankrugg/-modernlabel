<div class="white"></div>
<div class="page-title top">
  MODERN BOX RELEASES
</div>

<div class="banner">
  <div class="container banner-content">
    <% @releases.each do |release|%>
      <div class="col-xs-6 col-sm-3 col-md-3 col-lg-3">
        <div class="id-card">
          <%= link_to release do %>
            <%= cl_image_tag release.photo, height: 250, width: 250, crop: :fill, class: "img-responsive id-pic" %>
          <% end %>
          <div class="details">
            <%= release.artist.name %><br>
            <%= release.title %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
