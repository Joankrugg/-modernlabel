<div class="page-title top">
  MODERN BOX RELEASES
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,1), rgba(0,0,0,0.2)), url('http://res.cloudinary.com/da2krghvd/image/upload/v1505755372/corey-blaz-5003_sp9w4e.jpg');">
  <div class="container banner-content">
    <% @releases.each do |release|%>
      <div class="col-xs-6 col-sm-3 col-md-3 col-lg-3">
        <div class="id-card">
          <%= link_to release do %>
            <%= cl_image_tag release.photo, height: 250, width: 250, crop: :fill, class: "img-responsive id-pic" %>
          <% end %>
          <%= release.artist.name %><br>
          <%= release.title %>
        </div>
      </div>
    <% end %>
  </div>
</div>
