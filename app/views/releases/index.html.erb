<div class="container">
  <h2 class="negative top">
    RELEASES
  </h2>
</div>
<div class="container">
  <div class="row">
    <% @releases.each do |release|%>
      <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
        <div class="card">
          <div class="card-photo">
            <%= link_to release, class: 'product-inherit' do %>
              <%= cl_image_tag release.photo, :effect=>"grayscale", height: 300, width: 450, crop: :fill, class: "img-responsive style_image" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

