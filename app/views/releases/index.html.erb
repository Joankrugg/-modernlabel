<div class="index-wallpapers">
  <div class="search">
    <%= render 'shared/release_search' %>
  </div>
  <div class="index-page">
    <div class="container">
      <div class="row">
        <% if @releases.present? %>
          <% @releases.each do |release|%>
            <div class="col-xs-6 col-sm-4 col-md-3 col-lg-3">
              <div class="main">
                <%= render'releases/release', release: release %>
              </div>
            </div>
          <% end %>
        <% else %>
          <%= render 'shared/no_result' %>
        <% end %>
      </div>
    </div>
  </div>
  <%= render 'shared/footer' %>
</div>



