<div class="[ info-card ]">
  <%= link_to release do %>
    <%= cl_image_tag release.photo, height: 250, width: 400, crop: :fill, class: "photo-card img-responsive" %>
  <% end %>
  <div class="info">
    <h1>-<%= release.title.capitalize %>-</h1>
    <h1>-<%= release.artist.name %>-</h1>
    <h1><%= t(".type") %>:<%= release.record.name %></h1>
    <h1><%= t(".creation") %> <%= release.year_of_creation %></h1>
    <h1><%= t(".genre") %><%= release.genre.name %>%></h1>
    <%= render 'shared/icons' %>
  </div>
</div>
