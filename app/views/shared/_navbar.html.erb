<div class="navbar-wagon navbar-wagon-fixed">
<!-- Logo -->
  <%= link_to root_path, class: "logo" do %>
    <%= image_tag "mb_logo_web.jpg" %>
  <% end %>
    <div class="content">
  <!-- Right Navigation -->
      <div class="web-browsing hidden-xs hidden-sm hidden-md">
        <%= link_to t(".nav_actu"), actus_path, class: "navbar-item navbar-wagon-link negative" %>
        <%= link_to t(".nav_artist"), signed_artists_path, {class: "navbar-item navbar-wagon-link negative"}%>
        <%= link_to t(".nav_release"), signed_releases_path, class: "navbar-item navbar-wagon-link negative" %>
        <%= link_to t(".nav_shop"), shops_path, class: "navbar-item navbar-wagon-link negative" %>
      </div>
    </div>
    <div class="networks">
      <div class="links hidden-xs hidden-sm hidden-md">
        <!-- Avatar with dropdown menu -->
        <% if user_signed_in? %>
          <%= link_to current_user do %>
            <i class="fa fa-user-circle networks-item"></i>
          <% end %>
          <%= link_to rails_admin_path do %>
            <i class="fa fa-unlock-alt networks-item" ></i>
          <% end %>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out networks-item"></i>
          <% end %>
        <% else %>
          <%= link_to new_user_session_path do %>
            <i class="fa fa-sign-in networks-item"></i>
          <% end %>
        <% end %>
      </div>
    </div>
    <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-item hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <%= link_to signed_artists_path do %>
            <i class="fa fa-diamond"></i> <%= t(".index_artist", default: "ARTISTS") %>
          <% end %>
        </li>
        <li>
          <%= link_to signed_releases_path do %>
            <i class="fa fa-dot-circle-o"></i> <%= t(".index_release", default: "RELEASES") %>
          <% end %>
        </li>
        <li>
          <%= link_to actus_path do %>
            <i class="fa fa-newspaper-o"></i> <%= t(".index_news", default: "NEWS") %>
          <% end %>
        </li>
        <li>
          <%= link_to shops_path do %>
            <i class="fa fa-shopping-bag"></i> <%= t(".index_shop", default: "SHOP") %>
          <% end %>
        </li>
    <% if user_signed_in? %>
        <li>
          <%= link_to current_user do %>
            <i class="fa fa-user-circle"></i> <%= t(".index_action", default: "ACTIONS") %>
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i> <%= t(".index_out", default: "QUIT") %>
          <% end %>
        </li>
        <li>
          <%= link_to rails_admin_path do %>
            <i class="fa fa-unlock-alt" ></i> <%= t(".index_admin", default: "ADMIN") %>
          <% end %>
        </li>

    <% else %>

      <li>
        <%= link_to new_user_session_path do %>
          <i class="fa fa-sign-in"></i>" <%= t(".index", default: "Log in") %>
      </li>
    <% end %>
    <% end %>
      </ul>
    </div>
  </div>
</div>




