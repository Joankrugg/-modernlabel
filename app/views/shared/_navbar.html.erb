<div class="navbar-wagon-fixed">
<!-- Logo -->
  <%= link_to root_path, class: "logo" do %>
    <%= image_tag "mb_logo_2.jpg" %>
  <% end %>
  <div class="content">
<!-- Right Navigation -->
    <div class="web-browsing hidden-xs hidden-sm hidden-md">
      <%= link_to "Label", pages_label_path, {class: "navbar-item navbar-wagon-link"}%>
      <%= link_to "Artists", artists_path, {class: "navbar-item navbar-wagon-link"} %>
      <%= link_to "Releases", releases_path, class: "navbar-item navbar-wagon-link" %>
      <%= link_to "Shop", shops_path, class: "navbar-item navbar-wagon-link" %>
      <%= link_to "News", actus_path, class: "navbar-item navbar-wagon-link" %>
    </div>
  </div>
  <div class="networks">
    <div class="links hidden-xs hidden-sm hidden-md">
      <a href="https://www.facebook.com/modernboxrecords/?ref=br_rs"><i class="fa fa-facebook networks-item" aria-hidden="true"></i>
      <a href="https://www.instagram.com/modernboxrecords/"><i class="fa fa-instagram networks-item" aria-hidden="true"></i>
      <a href="https://www.youtube.com/channel/UCD-V4n6eugETPlfr16DqM_Q?view_as=subscriber"><i class="fa fa-youtube networks-item" aria-hidden="true"></i>
      <a href="https://soundcloud.com/modern-box"><i class="fa fa-soundcloud networks-item" aria-hidden="true"></i>
      <a href="https://twitter.com/Modern_box_rec"><i class="fa fa-twitter networks-item" aria-hidden="true"></i>
      <!-- Avatar with dropdown menu -->
      <% if user_signed_in? %>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
        <% end %>
      <% end %>
      </ul>
    </div>
  </div>
    <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-rnr-dropdown-menu">
        <li>
          <%= link_to pages_label_path do %>
            <i class="fa fa-beer"></i>" <%= t(".index", default: "Label") %>
          <% end %>
        </li>
        <li>
          <%= link_to artists_path do %>
            <i class="fa fa-music"></i>" <%= t(".index", default: "Artists") %>
          <% end %>
        </li>
        <li>
          <%= link_to releases_path do %>
            <i class="fa fa-handshake-o"></i>" <%= t(".index", default: "Releases") %>
          <% end %>
        </li>
        <li>
          <%= link_to shops_path do %>
            <i class="fa fa-shopping-bag"></i>" <%= t(".index", default: "Shop") %>
          <% end %>
        </li>
        <li>
          <%= link_to actus_path do %>
            <i class="fa fa-newspaper-o"></i>" <%= t(".index", default: "News") %>
          <% end %>
        </li>
     <% if user_signed_in? %>
      <!-- Profile picture and dropdown -->
      <div class="navbar-rnr-item">
        <div class="dropdown">
        <h3 class="dropdown-toggle navbar-signed" id="navbar-rnr-menu" data-toggle="dropdown">Go for it!</h3>
          <ul class="dropdown-menu dropdown-menu-right navbar-rnr-dropdown-menu">
            <li>
              <%= link_to current_user do %>
                <i class="fa fa-home"></i>  <%= t(".show", default: "Profil") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>s
        </div>
      </div>

    <% else %>

      <!-- Login text link -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "btn" %>
    <% end %>
    </div>
  </div>
</div>




