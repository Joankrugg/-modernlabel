<div class="navbar-wagon navbar-wagon-fixed">
  <div class="navbar-item">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-left navbar-wagon-dropdown-menu">
        <li>
          <%= link_to pages_introduction_path do %>
            <i class="fa fa-diamond"></i> <%= t(".index_introduction", default: "INTRODUCTION") %>
          <% end %>
        </li>
        <li>
          <%= link_to signed_artists_path do %>
            <i class="fa fa-diamond"></i> <%= t(".index_artist", default: "ARTISTS") %>
          <% end %>
        </li>
        <li>
          <%= link_to signed_releases_path do %>
            <i class="fa fa-dot-circle-o"></i> <%= t(".index_release", default: "RELEASES") %>
          <% end %>
        </li>
        <li>
          <%= link_to actus_path do %>
            <i class="fa fa-newspaper-o"></i> <%= t(".index_news", default: "NEWS") %>
          <% end %>
        </li>
        <li>
          <%= link_to shops_path do %>
            <i class="fa fa-shopping-bag"></i> <%= t(".index_shop", default: "SHOP") %>
          <% end %>
        </li>
      <% if user_signed_in? %>
        <li>
          <%= link_to current_user do %>
            <i class="fa fa-user-circle"></i> <%= t(".index_action", default: "ACTIONS") %>
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i> <%= t(".index_out", default: "QUIT") %>
          <% end %>
        </li>
        <li>
          <%= link_to rails_admin_path do %>
            <i class="fa fa-unlock-alt" ></i> <%= t(".index_admin", default: "ADMIN") %>
          <% end %>
        </li>
      <% else %>
        <li>
          <%= link_to new_user_session_path do %>
            <i class="fa fa-sign-in"></i>" <%= t(".index", default: "Log in") %>
        </li>
      <% end %>
    <% end %>
      </ul>
    </div>
  </div>
  <div class="logo">
    <%= link_to root_path do %>
      <%= image_tag "logo_4.png" %>
    <% end %>
  </div>
  <div class="navbar-item navbar-wagon-link">
    <% if user_signed_in? %>
      <%= link_to current_user do %>
        <i class="fa fa-user-circle"></i>
      <% end %>
      <% else %>
      <%= link_to new_user_session_path do %>
       <i class="fa fa-user-circle"></i>
      <% end %>
    <% end %>
  </div>
</div>




