<div class="card">
  <div class="negative">
    <%= @artist.name.capitalize %>
  </div>
  <br>
</div>
<br>
<div class="container">
  <div class="row">
    <div class="[ col-sm-12 col-md-offset- col-lg-6 ]">
      <div class="[ info-card ]">
        <%= cl_image_tag @artist.photo, height: 500, crop: :fit %>
        <div class="[ info-card-details ] animate">
          <div class="[ info-card-header ]">
            <h1><%= @artist.name.capitalize %></h1>
            <h3>Ville :<%= @artist.city %></h3>
            <h3>Nombre de musiciens: <%= @artist.number_of_musicians %> </h3>
            <h3>Année de création: <%= @artist.year_of_creation %> </h3>
            <h3><%=@artist.contact %></h3>
          </div>
          <%= cl_image_tag @artist.photo, height: 200, crop: :fit , class: "style_image"%>
        </div>
      </div>
    </div>
    <div class="[ col-sm-12 col-md-offset- col-lg-6 ]">
      <% if @artist.facebook_link.present? %>
        <div class="[ info-card ]">
          <%= link_to @artist.facebook_link do %>
            <i class="fa fa-facebook-square [ social-icon facebook ] animate"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="[ col-sm-12 col-md-offset- col-lg-6 ]">
      <% if @artist.insta_link.present? %>
        <div class="[ info-card ]">
          <%= link_to @artist.insta_link do %>
            <i class="fa fa-instagram [ social-icon facebook ] animate"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="[ col-sm-12 col-md-offset- col-lg-6 ]">
      <% if @artist.soundcloud_link.present? %>
        <div class="[ info-card ]">
          <%= link_to @artist.soundcloud_link do %>
            <i class="fa fa-soundcloud [ social-icon facebook ] animate"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="[ col-sm-12 col-md-offset- col-lg-6 ]">
      <% if @artist.twitter_link.present? %>
        <div class="[ info-card ]">
          <%= link_to @artist.twitter_link do %>
            <i class="fa fa-twitter-square [ social-icon facebook ] animate"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="[ col-sm-12 col-md-offset- col-lg-6 ]">
      <% if @artist.youtube_channel.present? %>
        <div class="[ info-card ]">
          <%= link_to @artist.youtube_channel do %>
            <i class="fa fa-youtube-square [ social-icon facebook ] animate"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="[ col-sm-12 col-md-offset- col-lg-6 ]">
      <% if @artist.bandcamp_link.present? %>
        <div class="[ info-card ]">
          <%= link_to @artist.bandcamp_link do %>
            <i class="fa fa-bandcamp [ social-icon facebook ] animate"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="[ col-sm-12 col-md-offset- col-lg-6 ]">
      <% if @artist.releases.present? %>
        <% @artist.releases.each do |release| %>
          <div class="col-lg-3">
            <%= link_to release do %>
              <%= cl_image_tag release.photo, height: 100, width: 120, crop: :fill, class: "thumbnail" %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>



