<div class="container model-card">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-2 col-lg-8">
      <div class="info-card">
        <%= cl_image_tag @artist.photo, height: 600, width: 760, crop: :fill, class: "style_image img-responsive"%>
        <div class="[ info-card-details ] animate">
          <div class="[ info-card-header ]">
            <h1><%= @artist.name.capitalize %></h1>
            <h3><%= t(".city")%>: <%= @artist.city %></h3>
            <h3><%= t(".number_of_musicians")%>: <%= @artist.number_of_musicians %> </h3>
          </div>
          <% if @artist.mp3? %>
            <% mp3 = @artist.mp3.path %>
            <audio controls>
              <source src=<%= cl_video_path(mp3) %> type="audio/mpeg">
            </audio>
          <% end %>
          <br>
          <br>
          <div class="ratings">
            <%= @artist.average_stars %>
          </div>
          <%= render 'shared/social-networks' %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-2 col-lg-8 artist-release-content">
      <% if @artist.releases.present? %>
        <% @artist.releases.each do |release| %>
          <%= link_to release do %>
            <div class="info-card productions">
              <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                <%= cl_image_tag release.photo, height: 100, width: 100, crop: :fill, class: "img-rounded img-responsive" %>
              </div>
              <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
                <p style="color: black; text-align: left; font-weight: bold"><%= release.title.upcase %>-<%= release.year_of_creation %></p>
                <p style="color: black; text-align: left"><%= release.description %></p>
                <p style="color: black; text-align: left"><%= release.average_hearts %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-2 col-lg-8">
      <% if @artist.youtube_channel? %>
      <% yt = @artist.youtube_channel.delete!('https://www.youtube.com/watch?v=') %>
        <iframe src='https://www.youtube.com/embed/<%= yt %>?rel=0&autoplay=<%= params[:autoplay] || 0 %>' height='600' width='760' class='img-responsive' frameborder='0' allowfullscreen></iframe>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="option">
      <% if @artist.user == current_user  %>
        <div class="banner-content">
          <div class="container actions">
            <div class="row">
              <a class="tab col-lg-offset-2 col-lg-2 col-md-offset-2 col-md-2 col-sm-offset-2 col-sm-2 col-xs-3 active" data-target="#bands">
                <h5>Band</h5>
              </a>
              <a class="tab col-lg-2 col-md-2 col-sm-2 col-xs-3" data-target="#releases">
                <h5>Releases</h5>
              </a>
              <a class="tab col-lg-2 col-md-2 col-sm-2 col-xs-3" data-target="#concerts">
                <h5>Concerts</h5>
              </a>
              <a class="tab col-lg-2 col-md-2 col-sm-2 col-xs-3" data-target="#assos">
                <h5>Vidéos</h5>
              </a>
            </div>

            <div class="row text-center">
              <div class="tab-content" id="bands">
                <div class="mb">
                  <div class="action">
                    <p style="color: white;">Edit my band </p>
                    <i class="fa fa-pencil" style="color: white;" data-toggle="collapse" data-target="#collapseProfile" aria-expanded="false" aria-controls="collapseProfile" ></i>
                    <div class="change-profile">
                      <div class="collapse" id="collapseProfile">
                        <%= render 'form', band: @band %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="tab-content col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10 hidden" id="releases">
              <div class="mb">
                <div class="action">
                  <% if @artist.releases.present? %>
                    <% @artist.releases.each do |release| %>
                      <%= link_to release do %>
                        <button class="call-to-action btn-medium btn"><%="update #{release.title}"%></button>
                      <% end %>
                    <% end %>
                  <% end %>
                  <%= link_to t(".create", default: "Créer Record"), new_release_path, class: "call-to-action btn-medium btn" %>
                </div>
              </div>
            </div>
            <div class="tab-content col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10 hidden" id="concerts">
              <div class="mb">
                <div class="action">
                  <% if @artist.performances.present? %>
                    <% @artist.performances.each do |performance| %>
                      <%= link_to performance do %>
                        <button class="call-to-action btn-medium btn"><%="update #{performance.name}"%></button>
                      <% end %>
                    <% end %>
                  <% end %>
                  <%= link_to t(".create", default: "Créer concert"), new_release_path, class: "call-to-action btn-medium btn" %>
                </div>
              </div>
            </div>
            <div class="tab-content col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10 hidden" id="places">
            </div>
          </div>
        </div>
      <% else %>
    </div>
  </div>
  <div class="row" id="ratings">
    <a class="tab col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6 col-xs-12" data-target="#rating-form">
      <% if @artist.ratings.blank? %>
        <p class="ajax-action">Be the first to leave a rating for <%= @artist.name %></p>
      <% else %>
        <p class="ajax-action">press to leave a rating for <%= @artist.name %></p>
      <% end %>
      <% end %>
      <%= render 'ratings/form', artist: @artist, rating: @rating %>
    </a>
    </div>
    <% @artist.ratings.each do |rating| %>
      <%= render 'ratings/show', rating: rating %>
    <% end %>
  </div>
</div>






