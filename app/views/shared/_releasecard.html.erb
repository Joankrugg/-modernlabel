<div class="card">
  <div class="negative">
    <%= @release.title %>
  </div>
  <br>
  <div class="container">
    <div class="row">
      <div class="[ col-sm-12 col-md-offset- col-lg-6 ]">
        <div class="[ info-card ]">
          <%= cl_image_tag @release.photo, height: 500, crop: :fit %>
          <div class="[ info-card-details ] animate">
            <div class="[ info-card-header ]">
              <h3><%= @release.record.name %></h3>
              <h3>Out on the <%= @release.creation %></h3>
              <h3><%= @release.price %>Euros</h3>
            </div>
            <%= cl_image_tag @release.photo, height: 200, crop: :fit , class: "style_image"%>
          </div>
        </div>
      </div>              <!-- Description -->
    <div class="[ col-sm-12 col-md-offset- col-lg-6 ]">
      <div class="[ info-card ]">
        <% if @release.youtube_link.present? %>
        <%= link_to @release.youtube_link do %>
          <i class="fa fa-youtube-square [ social-icon facebook ] animate"></i>
        <% end %>
        <% end %>
      </div>
    </div>
    <div class="[ col-sm-12 col-md-offset- col-lg-6 ]">
      <div class="[ info-card ]">
        <% if @release.bandcamp_link.present? %>
        <%= link_to @release.bandcamp_link do %>
          <i class="fa fa-bandcamp [ social-icon facebook ] animate"></i>
        <% end %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

